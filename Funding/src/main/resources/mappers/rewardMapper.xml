<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace 선언 -->
<!-- int reward_id; //order_reward_T의 키 값
 	 int pro_id; // project_T의 키 값
	 int mem_id; // member_T의 키값
	 String reward_title; // 리워드 상품 이름
	 int reward_price; // 리워드 개당 금액
	 int reward_sell_count; // 판매가능 갯수 -->
	 
<mapper namespace= "com.crowd.funding.mapper.rewardMapper">

	<!-- rewardDTO 삽입  -->
	<insert id="reward_create">
		INSERT (pro_id, mem_id, reward_title, reward_price, reward_sell_count) 
		INTO REWARD_ITEM 
		VALUES (#{pro_id},#{mem_id},#{reward_title},#{reward_price},#{reward_sell_count});
	</insert>
	
	<!--펀딩하기 클릭시, 프로젝트 상세보기 시 보여지는 rewardDTO 리스트 반환  -->
	<select id="reward_read" resultType="com.crowd.funding.reward.domain.RewardDTO">
		SELECT * 
		FROM REWARD_ITEM
		WHERE pro_id = #{pro_id}
	</select>

</mapper>